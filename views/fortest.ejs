                        <div class="col-sm-3 control-label">
                            <label for="email">Email:</label>
                        </div>
                        <div class="col-sm-5">	
                            <input type="text" class="form-control" name="pi[email]"  placeholder="abc@domain.com" value="<%= foundCV.email %>">				
                        </div>
                    </div>
                     <br />
                     <button class="btn btn-primary">Submit</button>
               </div>
            </div>
            
</div>

</form>
